<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.konovalovk.techno.guessit.fragments.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_authFragment2"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.konovalovk.techno.guessit.fragments.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.konovalovk.techno.guessit.fragments.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
</navigation>